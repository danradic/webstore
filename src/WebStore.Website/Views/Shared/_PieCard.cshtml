@model Pie

<div class="col">
    <div class="card pie-card">
        <a asp-controller="Pie" asp-action="Details" asp-route-id="@Model.PieId">
            <img src="@Model.ImageThumbnailUrl" class="card-img-top" alt="@Model.Name">
        </a>
        <div class="card-body pie-button">
            <h4 class="d-grid">
                <partial name="_AddToShoppingCartButton" model="Model" /> 
            </h4>

            <div class="d-flex justify-content-between mt-2">
                <h2 class="text-start">
                    <a asp-controller="Pie" asp-action="Details" asp-route-id="@Model.PieId" class="pie-link">@Model.Name</a>
                </h2>
                <h5 class="text-nowrap">
                    @Model.Price.ToString("c")
                </h5>
            </div>
        </div>
    </div>
</div>